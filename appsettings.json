{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.Extensions.Hosting": "Information",
      "Microsoft.Extensions.Diagnostics.HealthChecks": "Information",
      "System.Net.Http.HttpClient": "Warning",
      "MarketBrowserMod": "Information"
    }
  },
  "MarketBrowser": {
    "RefreshIntervalMinutes": 15,
    "MaxCacheAgeMinutes": 60,
    "MaxRetryAttempts": 3,
    "WebServerPort": 8080,
    "MaxDistanceKm": 1000000,
    "ProfitMarginThreshold": 0.1,
    "RateLimitDelayMs": 1000,
    "ConnectionTimeoutSeconds": 30,
    "SessionReconnectDelayMs": 5000,
    "MaxConsecutiveFailures": 5
  },
  "AllowedHosts": "*"
}